<?php

declare(strict_types=1);

namespace App\Domain\Users\Data;

use Flowlight\BaseData;
use Illuminate\Validation\Rule;

final class UserData extends BaseData
{
    public function __construct(
        public string $name,
        public ?string $email,
        public ?int $age,
        public float $balance,
        public bool $is_active,
    )
    {
    }

    /** @return array<string,string> */
    public static function attributes(): array
    {
        return [
            'name' => 'Name',
            'email' => 'Email',
            'age' => 'Age',
            'balance' => 'Balance',
            'is_active' => 'Is Active',
        ];
    }

    /** @return array<string,string> */
    public static function messages(): array
    {
        return [
            'name.required' => 'Name is required.',
            'name.string' => 'Name must be text.',
            'email.sometimes' => 'Email is optional.',
            'age.sometimes' => 'Age is optional.',
            'age.integer' => 'Age must be an integer.',
            'balance.required' => 'Balance is required.',
            'balance.numeric' => 'Balance must be a number.',
            'is_active.required' => 'Is Active is required.',
            'is_active.boolean' => 'Is Active must be true or false.',
        ];
    }

    /**
     * @return array<string, list<string>>
     */
    protected static function rules(): array
    {
        return [
            'name' => [
                'required',
                'string',
            ],
            'email' => [
                'sometimes',
            ],
            'age' => [
                'sometimes',
                'integer',
            ],
            'balance' => [
                'required',
                'numeric',
            ],
            'is_active' => [
                'required',
                'boolean',
            ],
        ];
    }
}
